<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Patel8sd_News.NewsHomePage"
             Title="Select Category">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Select a news category:" FontSize="22" HorizontalOptions="Center" />

        <Button Text="Technology" Clicked="OnCategoryClicked" />
        <Button Text="Business" Clicked="OnCategoryClicked" />
        <Button Text="Sports" Clicked="OnCategoryClicked" />
        <Button Text="Entertainment" Clicked="OnCategoryClicked" />
        <Button Text="Health" Clicked="OnCategoryClicked" />
    </StackLayout>
</ContentPage>
